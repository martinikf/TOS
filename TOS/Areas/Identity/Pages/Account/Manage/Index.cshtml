@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel

@{
    ViewData["Title"] = SharedLocalizer["Manage_Index_Heading"];
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@SharedLocalizer["Manage_Index_Heading"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="" disabled />
                <label asp-for="Username" class="form-label">@SharedLocalizer["Manage_Index_Username"]</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DisplayName" class="form-control" placeholder="" />
                <label asp-for="Input.DisplayName" class="form-label">@SharedLocalizer["Manage_Index_DisplayName"]</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">@SharedLocalizer["Manage_Index_Submit"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
