@using TOS.Resources
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TOS.Models.ApplicationUser
@inject IHtmlLocalizer<SharedResource> SharedLocalizer


@{
    ViewData["Title"] = "Administration - Edit Roles";
}

<h1>Administration</h1>

<h3>Edit Roles</h3>

<form asp-action="EditRoles">
    <div>
        @foreach(var r in ViewData["Roles"] as List<string>)
        {
            <div>
                @if ((bool) ViewData[r]!)
                {
                    <input type="radio" name="roleGroup" value="@r" checked/>
                }
                else
                {
                    <input type="radio" name="roleGroup" value="@r"/>
                }
                <label>@SharedLocalizer[r]</label>
            </div>
        }
    </div>
    <input type="submit" value="EditRoles" class="btn btn-primary" />
</form>