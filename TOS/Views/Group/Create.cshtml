@model TOS.Models.Group

@{
    ViewData["Title"] = SharedLocalizer["Group_Create_Heading"];
}

<h1>@SharedLocalizer["Group_Create_Heading"]</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">@SharedLocalizer["Group_Create_Name"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NameEng" class="form-label">@SharedLocalizer["Group_Create_NameEng"]</label>
        <input asp-for="NameEng" class="form-control" />
        <span asp-validation-for="NameEng" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <label asp-for="Visible" class="form-check-label">@SharedLocalizer["Group_Create_Visible"]</label>
        <input class="form-check-input" asp-for="Visible" checked/>
        <span asp-validation-for="Visible" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input type="submit" value="@SharedLocalizer["Group_Create_Submit"]" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

